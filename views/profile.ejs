<!DOCTYPE html>
<html lang="en">

  <head>
    <title>APOD Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="stylesheets/primarySiteTheme.css">
  </head>

  <body>
    <header>
    <h2>Welcome <%= user.local.firstname %></h2>
    </header>

    <section>
    <nav>
        <p class = "NavMenuButton NavMenuSelection"> My Profile </p>
        <a href="/application" class="NavMenuButton"> Application</a>
        <p class="NavMenuButton"> Onboarding </p>
        <p class="NavMenuButton"> Calendar </p>
        <a href="/volunteerpositions" class="NavMenuButton"> Volunteer </a>
        <a href="/logout" class="NavMenuButton">Log out</a>
        <a href="/coorDash" class="NavMenuButton">Dashboard</a>
    </nav>

    <article>
      <div id = "userProfile"
        <%- include partials/partialUserProfile.ejs %>
      </div>

		<h2>Training Status</h2>
    <p>Completed Training:
    <% if ((user.completedTrainings).length===0) {%>
          No training has been done
    <%}  else{%>
      <% for(var i=0;i<(user.completedTrainings).length;i++){%>
        <%=user.completedTrainings[i]%><br>
      <%}%>
    <%}%>
      </p>

    <p> Training list</p>
    <% trainings.forEach(function(training) { %>
      <li><%= training %> </li>
    <% }); %>

    <div id="Application_Status_Bar">
      <div id="progressBar">1%</div>
    </div>

    <br>
    <button onclick="update()">Check Status</button>

    <script>
    function update() {
    var element = document.getElementById("progressBar");
    var width = 1;
    var identity = setInterval(scene, 10);
    function scene() {
     if (width >= 100) {
       clearInterval(identity);
     } else {
       width++;
       element.style.width = width + '%';
       element.innerHTML = width * 1  + '%';
     }
    }
    }
    </script>

		<h2>Account Type</h2>
		<p><%= user.local.userType %></p>
    </article>
    </section>

    <footer>
    All Paws on Deck!
    </footer>

  </body>
</html>
